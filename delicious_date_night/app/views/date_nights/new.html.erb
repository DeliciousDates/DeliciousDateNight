<h1>Create a Date</h1>

<%= form_for @date_night, url: {action: "create"} do |date_night_form|%>

	<% if @couple %>
		<label>Couple: 
			<input type="text" name="receiver" value="<%= @couple.a_fname %> and <%= @couple.b_fname %>" >
		</label>
	<% else %>
		Choose a Couple:
		<% @couples.each do |couple| %>
			<div class="row">
			  <div class="col-sm-6 col-md-4">
			  	<img src= "<%= couple.picture_url %>" alt="..." class="couple-image">
			  	<div class="caption">
			  		<h4> <%= couple.a_fname %> and <%= couple.b_fname %> </h4>
			  	</div>
			  </div>
			</div>
		<% end %>
	<% end %>

	<% if @event %>
		<label>Event: 
			<input name="event" value="@event.event_theme"> 
		</label>
	<% else %>
		Choose a Theme:
			<% @events.each do |event| %>
			
			<% end %>
	<% end %>

	Meeting Location: <%= date_night_form.text_field :meeting_location %>

	Date and Time:
	<input type="datetime-local" name="start_date"/>


	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token() %>"/>

	<button>Propose a Date</button>

<% end %>

