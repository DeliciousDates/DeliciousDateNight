<div class="container">
		<h1>Form for creating a new couple</h1>
	<!-- TOP LEVEL COUPLE INFO -->
	<form method="POST" action="/couples">
		<section>
			<div class="row" style="float: left;">
			  <div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			      <img src="https://secure5.nm-secure.com/sr/images/user_placeholder.png" alt="...">
			      <div class="caption">
			        <!-- <h3>Thumbnail label</h3>
			        <p>...</p> -->
			      </div>
			    </div>
			  </div>
			</div>

			<label for="couple-username">
				Couple Username:
				<input id="couple-username" name="couple-username" type="text" class="form-control" />
			</label>
				
			<label for="couple-password">
				Password:
				<input id="couple-password" name="couple-password" type="password" class="form-control" />
			</label>
			<textarea placeholder="Write a description" class="clear" style="resize:none;"></textarea>
		</section>

		<br><br><br><br>

		
		<section id="couple-info">
			<!-- Boo 1 info -->
				<div>
					<label for="boo1-first-name">
						Dater 1:
						<input placeholder="first name" id="boo1-first-name" name="a_fname" type="text" class="form-control" />
					</label>
					<label>
						<input placeholder="last name" name="a_lname" type="text" class="form-control" />
					</label>
					<!-- <label>
						<input placeholder="age" name="boo1-age" type="text" class="form-control" />
					</label> -->
					<!-- <label>
						<input placeholder="gender" name="boo1-gender" type="text" class="form-control" />
					</label> -->
					<label>
						<input placeholder="email" name="a_email" type="text" class="form-control" />
					</label>
				</div>
			
		<br><br>

			<!-- Boo 2 info -->
				<div>
					<label>
						Dater 2:
						<input placeholder="first name" name="b_fname" type="text" class="form-control" />
					</label>
					<label>
						<input placeholder="last name" name="b_lname" type="text" class="form-control" />
					</label>
					<!-- <label>
						<input placeholder="age" name="boo2-age" type="text" class="form-control" />
					</label> -->
					<!-- <label>
						<input placeholder="gender" name="boo2-gender" type="text" class="form-control" />
					</label> -->
					<label>
						<input placeholder="email" name="b_email" type="text" class="form-control" />
					</label>
				</div>

				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token() %>">
				<input type="submit" class="btn btn-primary" />
		</section>
	</form>

	<br><br><br><br><br><br><br>
</div>