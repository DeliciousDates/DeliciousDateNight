<section class="container">
	<h1>form for editing an event</h1>

<form method = "POST" action = "/couples/ + coupleid + /events/ + eventsid">
	<input type = "hidden" name = "_method" value = "PUT" />

		<% @activities.each do |each| %>
		<option value =<%=each.id%>><%=each.name%></option>
		<% end %>
		</select>

		<br>Food:
		<select name = "food">
		<% @foods.each do |each| %>
		<option value =<%=each.id%>><%=each.cuisine%></option>
		<% end %>
		</select>
		<br>Drink:
		<select name = "drink">
		<% @drinks.each do |each| %>
		<option value =<%=each.id%>><%=each.recommended_drink%></option>
		<% end %>
		</select>
		<input type = "hidden" name = "couple_id" value = @id>
		<br>Theme:
		<input type = "text" name = "theme">
		<input type = "submit">

</form>


</section>