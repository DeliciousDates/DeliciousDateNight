<section class="container">
	<h1>Edit Event</h1>
	<form method = "POST" action =<%= "/couples/" + @id.to_s + "/events/" + @event.id.to_s%>>
		<input type ="hidden" name = "_method" value="PUT" />

		<div class="form-group form-group-lg">
			<h3>Activity:<h3>
			<select name = "activity" class ="form-control">
			<option selected value =<%=@event.activity.id%>><%=@event.activity.name%></option>
			<% @activities.each do |each| %>
				<% if each.id != @event.activity.id %>
					<option value =<%=each.id%>><%=each.name%></option>
				<% end %>
			<% end %>
			</select>
		</div>

		<div class="form-group form-group-lg">
			<h3>Food:</h3>
			<select class ="form-control" name ="food">
			<option selected value =<%=@event.food_id%>><%=@event.food.cuisine%></option>
			<% @foods.each do |each| %>
				<% if each.id != @event.food_id %>
					<option value =<%=each.id%>><%=each.cuisine%></option>
				<% end %>
			<% end %>
			</select>
		</div>

		<div class="form-group form-group-lg">
			<h3>Drink:</h3>
			<select class ="form-control" name = "drink">
			<option selected value =<%=@event.drink_id%>><%=@event.drink.recommended_drink%></option>
			<% @drinks.each do |each| %>
				<% if each.id != @event.drink_id%>
					<option value =<%=each.id%>><%=each.recommended_drink%></option>
				<% end %>
			<% end %>
			</select>
		</div>

		<div class="form-group form-group-lg">
			<input type = "hidden" name = "couple_id" value = @id>
			<h3>Theme:</h3>
			<input class ="form-control" type = "text" name = "theme" value = <%= @event.event_theme %>>
			<input id ="edit-event" class ="btn btn-primary btn-lg" type = "submit">
		</div>
	</form>
</section>
